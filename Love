<script>
    const phrases = [
        "Je t'aime", // French
        "Ich liebe dich", // German
        "Te amo", // Spanish
        "Ti amo", // Italian
        "ÊàëÁà±‰Ω† (W«í √†i n«ê)", // Chinese
        "ÊÑõ„Åó„Å¶„Çã (Aishiteru)", // Japanese
        "ÏÇ¨ÎûëÌï¥Ïöî (Saranghaeyo)", // Korean
        "–Ø –ª—é–±–ª—é —Ç–µ–±—è (Ya lyublyu tebya)", // Russian
        "Eu te amo", // Portuguese
        "Ik hou van jou", // Dutch
        "ŒïŒ≥œé œÉŒµ Œ±Œ≥Œ±œÄœé (Eg√≥ se agap√≥)", // Greek
        "Te iubesc", // Romanian
        "Ikh hob dikh", // Yiddish
        "‡§Æ‡•à‡§Ç ‡§§‡•Å‡§Æ‡§∏‡•á ‡§™‡•ç‡§Ø‡§æ‡§∞ ‡§ï‡§∞‡§§‡§æ ‡§π‡•Ç‡§Å (Main tumse pyar karta hoon)", // Hindi
        "Ngo oi nei", // Cantonese
    ];

    function showLove() {
        const randomPhrase = phrases[Math.floor(Math.random() * phrases.length)];
        const messageDiv = document.getElementById("message");
        messageDiv.textContent = randomPhrase;
        messageDiv.style.opacity = 1;

        setTimeout(() => {
            messageDiv.style.opacity = 0; // Fade out after 5 seconds
        }, 5000);
    }

    // Create little stars (yellow hearts)
    for (let i = 0; i < 50; i++) {
        const star = document.createElement('div');
        star.className = 'star';
        star.textContent = 'üíõ';
        star.style.top = Math.random() * 100 + 'vh';
        star.style.left = Math.random() * 100 + 'vw';
        star.style.fontSize = Math.random() * 10 + 5 + 'px'; // Random size
        document.body.appendChild(star);
    }
</script>

